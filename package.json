{
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "tsc -b tsconfig.build.json && pnpm --recursive --parallel run build",
    "update-version": "changeset version && node scripts/version.mjs",
    "circular": "madge --extensions ts --circular --no-color --no-spinner packages/*/src",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "check": "tsc -b tsconfig.json",
    "lint": "eslint \"packages/*/{src,test,examples,dtslint}/**/*.ts\"",
    "lint-fix": "pnpm lint --fix",
    "docgen": "pnpm --recursive --parallel exec docgen && node scripts/docs.js",
    "dtslint": "pnpm --recursive --parallel run dtslint",
    "dtslint-clean": "dtslint --installAll"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/plugin-transform-export-namespace-from": "^7.23.4",
    "@babel/plugin-transform-modules-commonjs": "^7.23.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@edge-runtime/vm": "^3.1.7",
    "@effect/build-utils": "^0.7.1",
    "@effect/docgen": "^0.3.8",
    "@effect/dtslint": "^0.0.4",
    "@effect/eslint-plugin": "^0.1.2",
    "@effect/language-service": "^0.1.0",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/browser": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/web-worker": "^1.0.4",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "eslint": "^8.54.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-codegen": "^0.21.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "fast-check": "^3.14.0",
    "glob": "^10.3.10",
    "madge": "^6.1.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.9",
    "vitest": "^1.0.4"
  }
}
